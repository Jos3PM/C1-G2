<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pe.edu.upeu.sysgui.controlador.MainController">
    <center>
        <VBox>
            <Label text="Nombre" />
           <ToolBar prefHeight="40.0" prefWidth="200.0">
               <items>
                   <Button mnemonicParsing="false" text="Archivo" />
                   <Button mnemonicParsing="false" text="Editar" />
               </items>
           </ToolBar>
            <TextField fx:id="nombreField" />
            <Label text="Asistencia" />
            <TextField fx:id="asisRegField" />
            <Button fx:id="btnReg" onAction="#registrar" text="Registrar" />
            <ListView fx:id="listView" prefHeight="150" prefWidth="250" />
            <padding>
                <Insets left="10.0" right="10.0" />
            </padding>

        </VBox>
    </center>
</BorderPane>
